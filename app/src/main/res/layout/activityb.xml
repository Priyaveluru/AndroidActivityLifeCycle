<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0055a2"
    android:weightSum="1">

    <Button
        android:text="Finish B"
        android:textColor="#ECF0F1"
        android:background="#212F3D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:id="@+id/finishb" />

    <TextView
        android:text="ActivityB occupies the Complete window real-estate.The Android forces Activity A to be Paused.However,the background thread keep incrementing the counter"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ECF0F1"
        android:contentDescription="ActivityB occupies the Complete window real-estate.The Android forces Activity A to be Paused.However "
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_weight="0.75"
        android:textSize="18sp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="76dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/sjsuicon"
        android:id="@+id/imageView2"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
