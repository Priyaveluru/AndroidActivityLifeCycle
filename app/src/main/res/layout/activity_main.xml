<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#0055a2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartapps.cmpe277_assignment1.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sjsuicon"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ActivityA"
        android:textColor="#ECF0F1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="60dp"
        android:id="@+id/ActivityA"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:text="Start Activity B"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#F1C40F"
        android:id="@+id/startb"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp" />

    <Button
        android:text="Dialog"
        android:layout_width="100dp"
        android:background="#F1C40F"
        android:layout_height="50dp"
        android:id="@+id/Dialog"
        android:layout_alignBaseline="@+id/startb"
        android:layout_alignBottom="@+id/startb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="startDialog"/>

    <Button
        android:text="Close App"
        android:textColor="#ECF0F1"
        android:background="#212F3D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CloseApp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:text="Thread Counter:"
        android:textColor="#ECF0F1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/resume_counter"
        android:textSize="18sp"
        android:layout_below="@+id/Dialog"
        android:layout_alignRight="@+id/startb"
        android:layout_alignEnd="@+id/startb"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="normal|bold" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7F9F9"
        android:layout_below="@+id/resume_counter"
        android:layout_alignRight="@+id/Dialog"
        android:layout_alignEnd="@+id/Dialog"
        android:id="@+id/Line"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
</RelativeLayout>
